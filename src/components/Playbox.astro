<div class="box">
  <div class="gridnew">
    <h1>Newest release</h1>
    <div class="grid-circle">
      <div class="circle circle1"></div>
      <div class="circle circle2"></div>
      <div class="circle circle3"></div>
    </div>
  </div>
  <div class="box2">
    <img src="../../public/img/ppnewjeans.png" alt="" />
    <h2>SuperShy</h2>
    <h3>New Jeans</h3>

    <button id="play">Play</button>
  </div>
</div>

<style>
  .box {
    background: #d4fac2;
    border: 3px solid #c5117d;
    border-radius: 25px;
    height: 200px;
    width: 450px;
  }

  .box2 {
    background: white;
    border: 3px solid #c5117d;
    border-radius: 25px;
    height: 150px;
    width: 400px;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    margin: 0 0 0 20px;
  }

  .gridnew {
    display: flex;
  }

  img {
    grid-column: 1;
    grid-row: 1 / 3;
    border-radius: 40px;
    margin: 10px 0 10px 10px;
  }

  h1 {
    margin: 0 0 0 20px;
  }
  h3 {
    color: #ff60bb;
    grid-column: 2;
    grid-row: 2;
    margin: 0 0 0 35px;
  }
  h2 {
    grid-column: 2;
    grid-row: 1;
    margin: 10px 0 0 35px;
  }

  button {
    grid-column: 3;
    grid-row: 1 / 3;
  }

  .grid-circle {
    display: flex;
    column-gap: 3px;
    grid-column: 2;
    grid-row: 1;
    justify-self: end;
    align-self: start;
    grid-column: 2;
    margin: 10px 15px;
  }

  .circle {
    width: 15px;
    height: 15px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 3px solid #c5117d;
  }

  .circle1 {
    background-color: #b1fef5; /* Color for the first circle */
  }

  .circle2 {
    background-color: #c8ffa7; /* Color for the second circle */
  }

  .circle3 {
    background-color: #ff6f9c; /* Color for the third circle */
  }
</style>
<script>
  let audioelement = new Audio("../../public/song/clap.wav");
  let masterplay = document.getElementById("play");

  masterplay.addEventListener("click", () => {
    if (audioelement.paused) {
      audioelement.play();
    } else {
      audioelement.pause();
    }
  });
</script>
