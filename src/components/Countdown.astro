<script>
  (function () {
    const second = 1000,
      minute = second * 60,
      hour = minute * 60,
      day = hour * 24;

    let today = new Date(),
      dd = String(today.getDate()).padStart(2, "0"),
      mm = String(today.getMonth() + 1).padStart(2, "0"),
      yyyy = today.getFullYear(),
      nextYear = 2023 + 1,
      dayMonth = "02/18/",
      birthday = dayMonth + nextYear; // Use nextYear here

    const countDown = new Date(birthday).getTime(),
      x = setInterval(function () {
        const now = new Date().getTime(),
          distance = countDown - now;

        if (distance < 0) {
          // If the countdown date has passed, set it to the next year
          const nextBirthday = new Date(dayMonth + (nextYear + 1)).getTime();
          const nextDistance = nextBirthday - now;
          document.getElementById("days").innerHTML = String(Math.floor(nextDistance / day));
          document.getElementById("hours").innerHTML = String(Math.floor((nextDistance % day) / hour));
          document.getElementById("minutes").innerHTML = String(Math.floor((nextDistance % hour) / minute));
          document.getElementById("seconds").innerHTML = String(Math.floor((nextDistance % minute) / second));
        } else {
          // Countdown for the current year
          document.getElementById("days").innerHTML = String(Math.floor(distance / day));
          document.getElementById("hours").innerHTML = String(Math.floor((distance % day) / hour));
          document.getElementById("minutes").innerHTML = String(Math.floor((distance % hour) / minute));
          document.getElementById("seconds").innerHTML = String(Math.floor((distance % minute) / second));
        }
      }, 1000);
  })();
</script>
