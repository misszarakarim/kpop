<style>
  .grid-item {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    border: 4px solid #c5117d;
    background-color: #c2dcfa;
    padding: 12px;
    padding-top: 56px;
    text-align: center;
    border-radius: 21px;
    margin: auto 32px;
  }

  h3 {
    font-size: 20px;
    margin-right: 90px;
    white-space: nowrap;
    position: absolute;
    top: 16px;
  }

  .countdown {
    position: relative;
    border: 4px solid #c5117d;
    border-radius: 24px;
    background-color: #fff;
    padding: 80px 140px;
  }

  ul {
    list-style: none;
    display: flex;
    gap: 14px;
    color: #c5117d;
    text-align: center;
    position: absolute;
    top: 54%;
    left: 48%;
    transform: translate(-50%, -50%);
