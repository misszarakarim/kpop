    display: block;
    margin-top: 0.5em;
    font-size: 40px;
  }

  .grid-circle {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 3px;
    margin-left: 199px;
    margin-top: -39px;
    margin-bottom: 12px;
  }

  .circle {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 3px solid #c5117d;
  }

