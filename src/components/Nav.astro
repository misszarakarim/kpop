<header>
  <div class="logo">Your Logo</div>
  <nav>
    <ul class="nav-list">
      <li><a class="kpop" href="#">Kpop</a></li>
      <li><a class="groups" href="#">Groups</a></li>
      <li><a class="recycle" href="#">Recycle</a></li>
      <li><a class="artist" href="#">Artist</a></li>
      <li><a class="other" href="#">Other</a></li>
    </ul>
    <div class="burger-menu">&#9776;</div>
  </nav>
</header>

<style>
  /* WEB */
  header {
    background-color: #ffbad3;
    color: #c5117d;
    padding: 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: -1%;
    border-bottom-left-radius: 64px;
    border-bottom-right-radius: 64px;
    border: 4px #c5117d solid;
  }

  .logo {
    font-size: 24px;
  }

  nav {
    display: flex;
    align-items: center;
    flex-grow: 1; /* Added to make the nav take up available space */
  }

  .nav-list {
    list-style: none;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-left: 30%;
    font-size: 134%;
    margin: 1%;
  }

  .nav-list li {
    margin-right: 55px;
  }
  .nav-list li > a {
    padding: 0 1.5em;
    color: #c5117d;
    text-decoration: none;
    font-size: 1.5rem;
    position: relative; /* Ensure the relative positioning for absolute pseudo-element */
  }

  .nav-list li > a:hover::after {
    content: "";
    display: block;
    height: 4px;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 110%;
    border: 3px solid #c5117d;
    border-radius: 10px;
    margin-bottom: -12px;
  }

  .nav-list .kpop > a:hover::after {
    background-color: #fac2c9;
  }

  .nav-list .groups > a:hover::after {
    background-color: #c2dcfa;
  }

  .nav-list .recycle > a:hover::after {
    background-color: #d4fac2;
  }

  .nav-list .artist > a:hover::after {
    background-color: #f9fac2;
  }

  .nav-list .other > a:hover::after {
    background-color: #d4c2fa;
  }

  .burger-menu {
    font-size: 48px;
    cursor: pointer;
    display: none;
    position: absolute;
    top: 3px;
    right: 46px;
  }

  @media only screen and (max-width: 768px) {
    .nav-list {
      flex-direction: column;
      position: absolute;
      top: 60px;
      right: 0;
      background-color: #ffbad3;
      width: 100%;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      display: none;
      border-bottom-left-radius: 64px;
      border-bottom-right-radius: 64px;
      border: 4px #c5117d solid;
    }

    .nav-list.show {
      display: flex;
    }

    .nav-list li {
      margin-right: 0;
      width: 100%;
      text-align: center;
    }

    .burger-menu {
      display: block;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const burgerMenu = document.querySelector(".burger-menu");
    const navList = document.querySelector(".nav-list");

    burgerMenu.addEventListener("click", function () {
      navList.classList.toggle("show");
    });
  });
</script>
