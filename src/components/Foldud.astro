---
const { title, text, color } = Astro.props;
---

<div class="accordion">
  <div class="accordion-item" style={`background-color: ${color};`} ;>
    <input type="checkbox" class="accordion1" />
    <label for="accordion1" class="accordion-item-title"><span class="icon"></span>{title}</label>
    <div class="accordion-item-desc">{text}</div>
  </div>
</div>

<style>
  .accordion {
    display: flex;
    flex-direction: column;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
    max-width: 991px;
    min-width: 320px;
    margin: 50px auto;
  }

  .accordion-item {
    margin-top: 10px;
    border: 3px solid #c5117d;
    border-radius: 24px;
    padding: 6px;
  }

  .accordion-item-title {
    position: relative;
    margin: 0;
    display: flex;
    width: 100%;
    color: #c5117d;
    font-size: 32px;
    cursor: pointer;
    justify-content: space-between;
    flex-direction: row-reverse;
    padding: 14px 20px;
    box-sizing: border-box;
    align-items: center;

    .icon {
      margin-left: 14px;
      width: 33px;
      height: 28px;
      display: inline-block;
      background-repeat: no-repeat;
      background-size: contain;
      transition: transform 0.3s ease;
    }
  }

  .accordion-item-desc {
    display: none;
    font-size: 14px;
    line-height: 18px;
    color: #400027;
    padding: 10px 20px 20px;
    box-sizing: border-box;
  }

  input[type="checkbox"] {
    position: absolute;
    height: 0;
    width: 0;
    opacity: 0;

    &:checked {
      ~ .accordion-item-desc {
        display: block;
      }

      ~ .accordion-item-title .icon {
        background-image: url(arrow.svg);
        transform: rotate(-90deg);
      }
    }

    ~ .accordion-item-title .icon {
      background-image: url(arrow.svg);
    }
  }
</style>
