---
const { h1, p } = Astro.props;
---

<div>
  <div class="bigbox"></div>
  <div class="bigboxtext">
    <h1>{h1}</h1>
    <p class="p-text">{p}</p>
  </div>
</div>

<style>
  /* MOBILE */
  .bigbox {
    height: 216px;
    border: 3px solid #c5117d;
    padding: 13px;
    border-radius: 37px;
    background: linear-gradient(295deg, rgba(249, 250, 194, 1) 10%, rgba(212, 250, 194, 1) 17%, rgba(212, 194, 250, 1) 35%, rgba(250, 194, 201, 1) 46%, rgba(250, 194, 201, 1) 52%, rgba(227, 205, 221, 1) 66%, rgba(195, 222, 247, 1) 79%, rgba(212, 250, 194, 1) 90%);
    margin: 1%;
    margin-top: 30%;
    width: 100%;
  }

  .bigboxtext {
    position: absolute;
    left: 32%;
    top: 28%;
    white-space: nowrap;
  }

  .p-text {
    position: absolute;
    left: -2%;
    top: 110%;
  }

  /* TABLET */

  @media only screen and (min-width: 768px) and (max-width: 1023px) {
    .bigbox {
      height: 216px;
      padding: 13px;
      border-radius: 37px;
      margin: 1%;
      margin-top: 15%;
      width: 102%;
    }

    .bigboxtext {
      position: absolute;
      left: 34%;
      top: 15%;
      font-size: 190%;
    }
  }

  /* WEB */

  @media only screen and (min-width: 1024px) {
    .bigbox {
      width: 95%;
      height: 270px;
      border: 3px solid #c5117d;
      padding: 13px;
      margin: 73px;
      margin-top: 73px;
      margin-left: 73px;
      margin-top: 10%;
      border-radius: 37px;
      background: linear-gradient(295deg, rgba(249, 250, 194, 1) 10%, rgba(212, 250, 194, 1) 17%, rgba(212, 194, 250, 1) 35%, rgba(250, 194, 201, 1) 46%, rgba(250, 194, 201, 1) 52%, rgba(227, 205, 221, 1) 66%, rgba(195, 222, 247, 1) 79%, rgba(212, 250, 194, 1) 90%);
      position: relative;
      left: 7%;
      margin-left: -64px;
    }

    .bigboxtext {
      position: absolute;
      left: 37%;
      top: 24%;
      font-size: 255%;
    }

    .p-text {
      position: absolute;
      left: -2%;
      top: 93%;
    }
  }
</style>
