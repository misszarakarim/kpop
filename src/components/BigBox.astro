---
const { boxtitle, boxtext } = Astro.props;
---

<div>
  <div class="bigbox"></div>

  <div class="bigboxtext">
    <h1>{boxtitle}</h1>
    <p class="p-text">{boxtext}</p>
  </div>
</div>

<!-- MOBILE -->

<style>
  /* MOBILE */
  .bigbox {
    width: 410px;
    height: 216px;
    border: 3px solid #c5117d;
    padding: 13px;
    margin: 25px;
    border-radius: 37px;
    background: linear-gradient(295deg, rgba(249, 250, 194, 1) 10%, rgba(212, 250, 194, 1) 17%, rgba(212, 194, 250, 1) 35%, rgba(250, 194, 201, 1) 46%, rgba(250, 194, 201, 1) 52%, rgba(227, 205, 221, 1) 66%, rgba(195, 222, 247, 1) 79%, rgba(212, 250, 194, 1) 90%);
    margin: 2%;
  }

  .bigboxtext[data-astro-cid-m476ufhh][data-astro-cid-m476ufhh] {
    position: absolute;
    left: 20%;
    top: 12%;
  }

  .p-text[data-astro-cid-m476ufhh][data-astro-cid-m476ufhh] {
    position: absolute;
    left: 6%;
    top: 110%;
  }

  /* TABLET */

  @media only screen and (min-width: 768px) and (max-width: 1023px) {
    .bigbox[data-astro-cid-m476ufhh][data-astro-cid-m476ufhh] {
      width: 805px;
      height: 216px;
      border: 3px solid #c5117d;
      padding: 13px;
      margin: 20px;
      border-radius: 37px;
      background: linear-gradient(295deg, rgba(249, 250, 194, 1) 10%, rgba(212, 250, 194, 1) 17%, rgba(212, 194, 250, 1) 35%, rgba(250, 194, 201, 1) 46%, rgba(250, 194, 201, 1) 52%, rgba(227, 205, 221, 1) 66%, rgba(195, 222, 247, 1) 79%, rgba(212, 250, 194, 1) 90%);
      position: relative;
    }

    .bigboxtext[data-astro-cid-m476ufhh][data-astro-cid-m476ufhh][data-astro-cid-m476ufhh] {
      position: absolute;
      left: 25%;
      top: 7%;
      font-size: 190%;
    }
  }

  /* WEB */

  @media only screen and (min-width: 1024px) {
    .bigbox[data-astro-cid-m476ufhh][data-astro-cid-m476ufhh] {
      width: 85%;
      height: 241px;
      border: 3px solid #c5117d;
      padding: 9px;
      margin: 5px;
      border-radius: 37px;
      background: linear-gradient(295deg, rgba(249, 250, 194, 1) 10%, rgba(212, 250, 194, 1) 17%, rgba(212, 194, 250, 1) 35%, rgba(250, 194, 201, 1) 46%, rgba(250, 194, 201, 1) 52%, rgba(227, 205, 221, 1) 66%, rgba(195, 222, 247, 1) 79%, rgba(212, 250, 194, 1) 90%);
      position: relative;
      left: 7%;
    }

    .bigboxtext[data-astro-cid-m476ufhh][data-astro-cid-m476ufhh][data-astro-cid-m476ufhh] {
      position: absolute;
      left: 30%;
      top: 8%;
      font-size: 255%;
    }

    .p-text[data-astro-cid-m476ufhh] {
      position: absolute;
      left: 5%;
      top: 93%;
    }
  }
</style>
